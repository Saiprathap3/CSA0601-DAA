#include <stdio.h>

void printPattern(int n) {
    for (int i = 1; i <= n; i++) {
        // Print leading spaces
        for (int j = 1; j <= n - i; j++) {
            printf(" ");
        }

        // Print numbers with extra space between them
        for (int j = 1; j <= i; j++) {
            printf("%d ", j);
        }

        printf("\n");
    }
}

int main() {
    int n = 4;  // You can change the value of n as needed
    printPattern(n);

    return 0;
}
